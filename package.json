{
	"type": "module",
  "name": "http-interaction-template",
  "version": "1.0.0",
  "author": "Two",
	"main": "src/main/index.js",
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules"
		],
		"watch": [
			"./src/"
		],
		"exec": "npm start",
		"ext": "ts, js"
	},
	"scripts": {
		"start": "node -r dotenv/config .",
		"dev": "nodemon",
		"prisma-push": "npx prisma db push",
		"prisma-migrate": "npx prisma migrate dev --name init",
		"update-commands": "node --experimental-fetch -r dotenv/config tools/createCommands.js"
	},
	"dependencies": {
		"@prisma/client": "^4.8.0",
		"discord-interactions": "^3.2.0",
		"dotenv": "^16.0.3",
		"glob": "^8.0.3",
		"hyper-express": "^6.5.3",
		"prisma": "^4.8.1"
	},
	"devDependencies": {
		"nodemon": "^2.0.20"
	},
	"imports": {
		"#util/*": "./src/util/*"
	}
}